<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="w3-light-grey">
  <%- include('../partials/nav') %>
  <%- include('../partials/header') %>

  <main>
    <section class="banner" id="home">
      <div class="banner-txt">
        <h1 class="w3-text-white banner-h1">Rate what youâ€™ve watched with a <br>thumb up or thumb down</h1>
        <span class="btn-group">
          <a class="btn btn-search-movie" href="/search">SEARCH MOVIE</a>
          <% if(firstname == "" || typeof firstname == undefined) { %>
          <a class="btn btn-login" href="/login">LOG IN</a>
          <% } %>
        </span>
      </div>
      <img class="w3-image" src="/assets/enjoy_movie.jpg" alt="cinema" width="1000" height="1060">
    </section>

    <section class="container">
      <!-- POPULAR Movies -->
      <div class="row">
        <div class="col-md-12 col-sm-12 text-left">
          <h1 class="carousel-title text-left">Popular Movies</h1>
        </div>
        
        <div id="popularMovie" class="carousel slide" data-ride="carousel">
          <div id="popular" class="carousel-inner">
          </div>

          <a class="carousel-control-prev" href="#popularMovie" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>

          <a class="carousel-control-next" href="#popularMovie" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

       <!-- TOP RATED Movies -->
       <div class="row">
        <div class="col-md-12 text-left">
          <h1 class="carousel-title text-left">Top Rated Movies</h1>
        </div>
        
        <div id="topRateMovie" class="carousel slide d-block d-sm-block d-md-block" data-ride="carousel">
          <div id="topRated" class="carousel-inner">
          </div>

          <a class="carousel-control-prev" href="#topRateMovie" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>

          <a class="carousel-control-next" href="#topRateMovie" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>

       <!-- UPCOMING Movies -->
       <div class="row">
        <div class="col-md-12 text-left">
          <h1 class="carousel-title text-left">Upcoming Movies</h1>
        </div>
        
        <div id="upcomingMovie" class="carousel slide d-block d-sm-block d-md-block" data-ride="carousel">
          <div id="upcoming" class="carousel-inner">
          </div>

          <a class="carousel-control-prev" href="#upcomingMovie" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>

          <a class="carousel-control-next" href="#upcomingMovie" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </section>
    
  </main>
  <%- include('../partials/footer') %>
  


  <!-- Bootstrap JQuery Plugin -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>

  <!-- Additional Javascript -->
  <!-- <script src="https://www.jqueryscript.net/demo/bootstrap-carousel-templates/logo-carousel/js/main.js"></script> -->
  <script src="/js/allMovies.js"></script>
</body>
</html>
